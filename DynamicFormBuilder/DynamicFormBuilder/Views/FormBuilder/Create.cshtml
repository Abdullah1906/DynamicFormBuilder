@using DynamicFormBuilder.ViewModels
@model FormCreateVM
@{
    ViewData["Title"] = "Create Form";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Create Dynamic Form</h2>

    <form asp-action="Create" method="post" id="formCreate">
        @* <div asp-validation-summary="All" class="text-danger mb-3"></div> *@
        <div class="mb-3">
            <label class="form-label">Form Title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div id="fieldsContainer"></div>

        <div class="mb-3">
            <button type="button" id="addMore" class="btn btn-outline-primary">Add More</button>
        </div>

        <input type="hidden" name="FieldsJson" id="FieldsJson" />

        <button type="submit" class="btn btn-success">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Back to list</a>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        const FIXED_OPTIONS = ["Option 1", "Option 2", "Option 3"];

        function newFieldHtml(index) {
            return `
                    <div class="card mb-2 field-card" data-index="${index}">
                        <div class="card-body">
                            <div class="row g-2">
                                <div class="col-md-4">
                                    <label class="form-label">Label</label>
                                    <input class="form-control field-label" placeholder="e.g., Select Item" />
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Select Option</label>
                                    <select class="form-select field-selected">
                                        ${FIXED_OPTIONS.map(o => `<option>${o}</option>`).join("")}
                                    </select>
                                    
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <div class="form-check">
                                        <input class="form-check-input field-required" type="checkbox" />
                                        <label class="form-check-label">Required</label>
                                    </div>
                                </div>
                                <div class="col-md-2 d-flex align-items-end justify-content-end">
                                    <button type="button" class="btn btn-danger btn-sm remove-field">Remove</button>
                                </div>
                            </div>
                        </div>
                    </div>`;
        }

        let index = 0;

        $(function () {
            // initial field
            $("#addMore").on("click", function () {
                $("#fieldsContainer").append(newFieldHtml(index++));
            });
            $("#addMore").trigger("click");

            // Remove field
            $("#fieldsContainer").on("click", ".remove-field", function () {
                $(this).closest(".field-card").remove();
            });

            // For new option
            // <div class="input-group mt-1">
            //     <input type="text" class="form-control new-option" placeholder="Add new option" />
            //     <button type="button" class="btn btn-outline-secondary add-option">Add</button>
            // </div>
            // $("#fieldsContainer").on("click", ".add-option", function () {
            //     const $fieldCard = $(this).closest(".field-card");
            //     const $select = $fieldCard.find(".field-selected");
            //     const $input = $fieldCard.find(".new-option");
            //     const newOption = $input.val().trim();
            //     if (newOption) {
            //         $select.append(`<option selected>${newOption}</option>`);
            //         $input.val("");
            //     }
            // });

            // For submit 
            $("#formCreate").on("submit", function () {
                const fields = [];
                $("#fieldsContainer .field-card").each(function () {
                    const label = $(this).find(".field-label").val() || "";
                    const selected = $(this).find(".field-selected").val() || "";
                    const required = $(this).find(".field-required").is(":checked");
                    fields.push({
                        label: label,
                        isRequired: required,
                        selectedOption: selected
                    });
                });
                $("#FieldsJson").val(JSON.stringify(fields));
            });
        });
    </script>
}
