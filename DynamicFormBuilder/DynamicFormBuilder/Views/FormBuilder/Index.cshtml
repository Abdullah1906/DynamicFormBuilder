@{
    ViewData["Title"] = "Forms";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Saved Forms</h2>
        <a asp-action="Create" class="btn btn-primary">Create New Form</a>
    </div>

    <table id="formsTable" class="display table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#formsTable').DataTable({
                ajax: {
                    url: '@Url.Action("ListJson")',
                    dataSrc: 'data'
                },
                columns: [
                    { data: 'id' },
                    { data: 'title' },
                    {
                        data: 'createdAt',
                        render: function (data) {
                            const d = new Date(data);
                            return d.toLocaleString();
                        }
                    },
                    {
                        data: 'id',
                        render: function (data) {
                            return `<a class="btn btn-sm btn-info" href="/FormBuilder/Preview/${data}">Preview</a>`;
                        }
                    }
                ]
            });
        });
    </script>
}
